<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Home_page">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abrilfatface"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />


        <com.google.android.material.card.MaterialCardView
            style="@style/custom_card_view_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintVertical_bias="1.0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="ScrollViewSize">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abrilfatface"
                        android:padding="10dp"
                        android:text="Settings"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText,TextSizeCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/txt_UserName_ac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abrilfatface"
                            android:padding="10dp"
                            android:text="UserName"
                            android:textColor="@color/black"
                            android:textSize="30dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <ImageView
                            android:id="@+id/btn_edit_icon_Ac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:src="@drawable/ic_edit"
                            tools:ignore="ContentDescription,RtlSymmetry" />


                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:boxStrokeColor="@color/black"
                        app:placeholderTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_Fname_Ac"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:drawableStart="@drawable/user_name_asset"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColorHighlight="@color/black"
                            android:textColorLink="@color/black"
                            tools:ignore="VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeColor="@color/black"
                        app:placeholderTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_Lname_Ac"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:drawableStart="@drawable/user_name_asset"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColorHighlight="@color/black"
                            android:textColorLink="@color/black"
                            tools:ignore="VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeColor="@color/black"
                        app:placeholderTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_Contect_Ac"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:drawableStart="@drawable/image_contect_number"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/contect_number"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColorHighlight="@color/black"
                            android:textColorLink="@color/black"
                            tools:ignore="VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeColor="@color/black"
                        app:placeholderTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email_Ac"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:drawableStart="@drawable/baseline_email_24"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/black"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/email"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColorHighlight="@color/black"
                            android:textColorLink="@color/black"
                            tools:ignore="VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/TV_changepass_AC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingTop="20dp"
                        android:text="Change Password"
                        android:textColor="@color/app_theme"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingTop="70dp"
                        tools:ignore="RtlHardcoded">

                        <Button
                            android:id="@+id/btn_Logout_Ac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/abrilfatface"
                            android:text="Log Out"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:paddingTop="70dp"
                            tools:ignore="RtlHardcoded">


                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Do You Want to Delete This Account? "
                                tools:ignore="HardcodedText,InefficientWeight" />

                            <TextView
                                android:id="@+id/TV_DeleteAcc_AC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:text="Delete Account"
                                android:textColor="@color/app_theme"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>